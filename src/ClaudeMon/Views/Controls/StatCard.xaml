<UserControl x:Class="ClaudeMon.Views.Controls.StatCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Border Style="{StaticResource CardBorder}" MinWidth="170"
            ToolTip="{Binding Hint, RelativeSource={RelativeSource AncestorType=UserControl}}"
            >
        <StackPanel>
            <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Style="{StaticResource LabelText}"
                       FontWeight="SemiBold" />
            <TextBlock Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Style="{StaticResource ValueText}"
                       Margin="0,4,0,0" />
        </StackPanel>
    </Border>
</UserControl>
