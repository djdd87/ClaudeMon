<Window x:Class="ClaudeMon.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ClaudeMon.Views.Controls"
        xmlns:converters="clr-namespace:ClaudeMon.Converters"
        xmlns:vm="clr-namespace:ClaudeMon.ViewModels"
        mc:Ignorable="d"
        Title="ClaudMon"
        Width="420"
        SizeToContent="Height"
        MaxHeight="9999"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Deactivated="Window_Deactivated">

    <Window.Resources>
        <converters:TokenFormatterConverter x:Key="TokenFormatter" />
        <converters:PercentToColorConverter x:Key="PercentToColor" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibility" />
        <converters:EqualityConverter x:Key="EqualityConverter" />
        <converters:PercentToTextConverter x:Key="PercentToText" />
    </Window.Resources>

    <!-- Outer Border: rounded corners, dark background, drop shadow -->
    <Border CornerRadius="8"
            Background="{DynamicResource BgPrimaryBrush}"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                              ShadowDepth="2"
                              Opacity="0.6"
                              Color="Black" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ========== Title Bar ========== -->
            <Border Grid.Row="0"
                    Background="{DynamicResource BgSecondaryBrush}"
                    CornerRadius="8,8,0,0"
                    Padding="16,10"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <DockPanel>
                    <Button DockPanel.Dock="Right"
                            Style="{StaticResource CloseButton}"
                            Click="CloseButton_Click"
                            VerticalAlignment="Center" />
                    <StackPanel x:Name="ThemeButtonPanel"
                                DockPanel.Dock="Right"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,4,0">
                        <Button x:Name="BtnDark"   Content="Dark"   Style="{StaticResource ThemeToggleButton}" Click="ThemeDark_Click"   Margin="0,0,2,0" />
                        <Button x:Name="BtnLight"  Content="Light"  Style="{StaticResource ThemeToggleButton}" Click="ThemeLight_Click"  Margin="0,0,2,0" />
                        <Button x:Name="BtnSystem" Content="System" Style="{StaticResource ThemeToggleButton}" Click="ThemeSystem_Click" />
                    </StackPanel>
                    <TextBlock Text="ClaudMon"
                               Style="{StaticResource HeaderText}"
                               FontSize="15"
                               VerticalAlignment="Center" />
                </DockPanel>
            </Border>

            <!-- ========== Profile Selector (only shown when multiple profiles) ========== -->
            <ItemsControl Grid.Row="1"
                          ItemsSource="{Binding Profiles}"
                          Visibility="{Binding Profiles.Count, Converter={StaticResource CountToVisibility}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:ProfileViewModel}">
                        <Border Padding="12,8"
                                Cursor="Hand"
                                MouseLeftButtonUp="ProfileTab_Click"
                                Tag="{Binding}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource BgCardBrush}" />
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <MultiBinding Converter="{StaticResource EqualityConverter}">
                                                    <Binding />
                                                    <Binding Path="DataContext.SelectedProfile"
                                                             RelativeSource="{RelativeSource AncestorType=Window}" />
                                                </MultiBinding>
                                            </DataTrigger.Binding>
                                            <Setter Property="Background" Value="Transparent" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding ProfileName}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- ========== Content (binds to SelectedProfile.Usage) ========== -->
            <StackPanel Grid.Row="2" Margin="16,12,16,8">

                    <!-- ===== 1. Usage Gauge ===== -->
                    <StackPanel HorizontalAlignment="Center"
                                Margin="0,4,0,12">
                        <controls:UsageGaugeControl Width="160" Height="160"
                                                     Percentage="{Binding SelectedProfile.Usage.EstimatedPercentage, Mode=OneWay}"
                                                     GaugeImageSource="{Binding SelectedProfile.GaugeImageSource, Mode=OneWay}"
                                                     HorizontalAlignment="Center" />

                        <!-- ── LIVE mode display ── -->
                        <StackPanel HorizontalAlignment="Center">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedProfile.Usage.IsLive}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <!-- Session + Weekly percentages side by side -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                                <TextBlock FontSize="14">
                                    <Run Text="Session: " Foreground="{DynamicResource TextSecondaryBrush}" /><Run Text="{Binding SelectedProfile.Usage.SessionPercentage, Converter={StaticResource PercentToText}, Mode=OneWay}" Foreground="{Binding SelectedProfile.Usage.SessionPercentage, Converter={StaticResource PercentToColor}}" />
                                </TextBlock>
                                <TextBlock FontSize="14" Margin="16,0,0,0">
                                    <Run Text="Weekly: " Foreground="{DynamicResource TextSecondaryBrush}" /><Run Text="{Binding SelectedProfile.Usage.WeeklyPercentage, Converter={StaticResource PercentToText}, Mode=OneWay}" Foreground="{Binding SelectedProfile.Usage.WeeklyPercentage, Converter={StaticResource PercentToColor}}" />
                                </TextBlock>
                            </StackPanel>

                            <!-- Reset times -->
                            <TextBlock HorizontalAlignment="Center" FontSize="10"
                                       Foreground="{DynamicResource TextMutedBrush}" Margin="0,3,0,2">
                                <Run Text="Session resets " /><Run Text="{Binding SelectedProfile.Usage.SessionResetsAt, StringFormat={}{0:h:mm tt}, Mode=OneWay, TargetNullValue='—'}" /><Run Text="  ·  Wk resets " /><Run Text="{Binding SelectedProfile.Usage.WeeklyResetsAt, StringFormat={}{0:MMM dd h:mm tt}, Mode=OneWay, TargetNullValue='—'}" />
                            </TextBlock>

                            <!-- Plan name + Live badge -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2,0,0">
                                <TextBlock Text="{Binding SelectedProfile.PlanDisplayName, Mode=OneWay, FallbackValue='Unknown Plan'}"
                                           Style="{StaticResource SubHeaderText}" />
                                <Border Background="#2E7D32" CornerRadius="3" Padding="5,1" Margin="6,0,0,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="LIVE" FontSize="9" FontWeight="Bold" Foreground="White" />
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- ── ESTIMATED mode display ── -->
                        <StackPanel HorizontalAlignment="Center">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedProfile.Usage.IsLive}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock HorizontalAlignment="Center" Margin="0,8,0,2">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="20" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="Foreground"
                                                Value="{Binding SelectedProfile.Usage.EstimatedPercentage,
                                                        Converter={StaticResource PercentToColor}}" />
                                    </Style>
                                </TextBlock.Style>
                                <Run Text="{Binding SelectedProfile.Usage.EstimatedPercentage, Converter={StaticResource PercentToText}, Mode=OneWay}" /><Run Text=" Est." />
                            </TextBlock>

                            <TextBlock HorizontalAlignment="Center"
                                       Text="{Binding SelectedProfile.PlanDisplayName, Mode=OneWay, FallbackValue='Unknown Plan'}"
                                       Style="{StaticResource SubHeaderText}" />
                        </StackPanel>
                    </StackPanel>

                    <!-- ===== 2. Stat Cards (2x2 grid) ===== -->
                    <UniformGrid Rows="2" Columns="2"
                                 Margin="0,0,0,12">
                        <controls:StatCard Label="TODAY MSGS"
                                           Value="{Binding SelectedProfile.Usage.TodayMessages, Mode=OneWay}"
                                           Hint="Total human messages sent to Claude today. Excludes tool results and system-injected content." />

                        <controls:StatCard Label="TODAY OUT TOKENS"
                                           Value="{Binding SelectedProfile.Usage.TodayTokens,
                                                   Converter={StaticResource TokenFormatter},
                                                   Mode=OneWay}"
                                           Hint="Output tokens generated by Claude today. Cache creation/read tokens are excluded to avoid inflated counts." />

                        <controls:StatCard Label="TODAY SESSIONS"
                                           Value="{Binding SelectedProfile.Usage.TodaySessions, Mode=OneWay}"
                                           Hint="Number of conversations started today. Each conversation file with at least one human message counts as one session." />

                        <controls:StatCard Label="WEEKLY TOKENS"
                                           Value="{Binding SelectedProfile.Usage.WeeklyTokensUsed,
                                                   Converter={StaticResource TokenFormatter},
                                                   Mode=OneWay}"
                                           Hint="Total output tokens used in the current 7-day rolling window, read live from conversation files." />
                    </UniformGrid>

                    <!-- Pills: lifetime stats -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,12">
                        <Border CornerRadius="12"
                                Background="{DynamicResource BgCardBrush}"
                                BorderBrush="{DynamicResource BgCardHoverBrush}"
                                BorderThickness="1"
                                Padding="10,5"
                                Margin="0,0,6,0"
                                ToolTip="Lifetime estimated API-equivalent cost in USD across all Claude models (from stats-cache).">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedProfile.Usage.EstimatedCostUsd}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="EST. COST  "
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock FontSize="11" FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center">
                                    <Run Text="$" /><Run Text="{Binding SelectedProfile.Usage.EstimatedCostUsd, StringFormat={}{0:F2}, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Border>

                        <Border CornerRadius="12"
                                Background="{DynamicResource BgCardBrush}"
                                BorderBrush="{DynamicResource BgCardHoverBrush}"
                                BorderThickness="1"
                                Padding="10,5"
                                ToolTip="Total speculative pre-execution time saved by Claude Code, as reported by stats-cache.">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedProfile.Usage.TimeSavedFormatted}" Value="0s">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedProfile.Usage.TimeSavedFormatted}" Value="—">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="TIME SAVED  "
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="{Binding SelectedProfile.Usage.TimeSavedFormatted, Mode=OneWay}"
                                           FontSize="11" FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- ===== 3. Burn Rate ===== -->
                    <UniformGrid Rows="1" Columns="2"
                                 Margin="0,0,0,12">
                        <controls:StatCard Label="DAILY BURN"
                                           Value="{Binding SelectedProfile.Usage.DailyBurnRateText, Mode=OneWay}"
                                           Hint="Average output tokens consumed per day in the current window (weekly total ÷ days elapsed since reset)." />
                        <controls:StatCard Label="RUNWAY"
                                           Value="{Binding SelectedProfile.Usage.RunwayText, Mode=OneWay}"
                                           Hint="Estimated days until the weekly token limit is reached at the current daily burn rate. 'Resets first' means the window resets before you'd hit the limit." />
                    </UniformGrid>

                    <!-- ===== 4. Model Breakdown ===== -->
                    <controls:ModelUsageBar ModelData="{Binding SelectedProfile.Usage.ModelBreakdown, Mode=OneWay}"
                                            Margin="0,0,0,8" />

                    <!-- ===== 5. 7-Day Activity ===== -->
                    <controls:ActivityChart DailyData="{Binding SelectedProfile.Usage.DailyActivity, Mode=OneWay}"
                                            Margin="0,0,0,8" />

            </StackPanel>

            <!-- ========== Footer ========== -->
            <Border Grid.Row="3"
                    Background="{DynamicResource BgSecondaryBrush}"
                    CornerRadius="0,0,8,8"
                    Padding="16,8">
                <TextBlock Style="{StaticResource LabelText}"
                           FontSize="10"
                           HorizontalAlignment="Center">
                    <Run Text="Data as of: " />
                    <Run Text="{Binding SelectedProfile.Usage.LastDataDate, StringFormat={}{0:MMM dd yyyy}, Mode=OneWay,
                                TargetNullValue='N/A'}" />
                    <Run Text=" · Last refresh: " />
                    <Run Text="{Binding SelectedProfile.Usage.LastRefreshTime, StringFormat={}{0:HH:mm:ss}, Mode=OneWay}" />
                </TextBlock>
            </Border>

        </Grid>
    </Border>
</Window>
